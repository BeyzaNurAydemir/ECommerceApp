<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="productModel"
            type="com.beyzanuraydemir.ecommerceapp.model.ProductBagRoomModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        
        <ImageView
            android:id="@+id/bagImageView"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bagProductNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{productModel.title}"
                android:layout_marginLeft="20dp"
                android:textSize="24sp"
                android:layout_marginTop="5dp">
            </TextView>

            <TextView
                android:id="@+id/bagPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{productModel.price}"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_marginTop="5dp">
            </TextView>

            <TextView
                android:id="@+id/bagCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number: "
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_marginTop="5dp">
            </TextView>

        </LinearLayout>



    </LinearLayout>
</layout>